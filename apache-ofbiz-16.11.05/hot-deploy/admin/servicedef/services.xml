<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Admin Portal Component Services</description>
    <vendor>OFBiz</vendor>
    <version>1.0</version>

    <service name="onboardNewCustomer" engine="java"
             location="com.autopatt.admin.services.CustomerOnboardingServices" invoke="onboardNewCustomer"
             auth="true" require-new-transaction="true" transaction-timeout="1200" max-retry="0">
        <!--<permission-service service-name="partyStatusPermissionCheck" main-action="UPDATE"/>-->
        <attribute name="tenantId" type="String" mode="INOUT"/>
        <attribute name="organizationName" type="String" mode="IN"/>
        <attribute name="contactFirstName" type="String" mode="IN"/>
        <attribute name="contactLastName" type="String" mode="IN"/>
        <attribute name="contactEmail" type="String" mode="IN"/>
        <attribute name="contactPassword" type="String" mode="IN"/>
        <attribute name="sendNotificationToContact" type="String" mode="IN"/>
    </service>

    <service name="testShellScriptService" engine="java"
             location="com.autopatt.admin.services.CustomerOnboardingServices" invoke="testShellScriptService"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>Service to test out shell script execution</description>
    </service>

    <service name="createTenantEntries" engine="java"
             location="com.autopatt.admin.services.CustomerOnboardingServices" invoke="createTenantEntries"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>Creates Tenant and TenantDataSource entries for new tenant</description>
        <!--<permission-service service-name="partyStatusPermissionCheck" main-action="UPDATE"/>-->
        <attribute name="tenantId" type="String" mode="IN"/>
        <attribute name="organizationName" type="String" mode="IN"/>
        <attribute name="dbHostIp" type="String" mode="IN"/>
        <attribute name="dbHostPort" type="String" mode="IN"/>
        <attribute name="tenantDbPrefix" type="String" mode="IN"/>
        <attribute name="tenantDbUsername" type="String" mode="IN"/>
        <attribute name="tenantDbPassword" type="String" mode="IN"/>
    </service>

    <service name="assignSubscriptionToTenant" engine="java"
             location="com.autopatt.admin.services.SubscriptionServices" invoke="assignSubscriptionToTenant"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>Assigns subscription to tenant</description>
        <attribute name="orgPartyId" type="String" mode="IN" optional="false"/>
        <attribute name="productId" type="String" mode="IN" optional="false"/>
        <attribute name="validFrom" type="Timestamp" mode="IN" optional="false"/>
        <attribute name="validTo" type="Timestamp" mode="IN" optional="true"/>
        <attribute name="subscriptionId" type="String" mode="OUT" optional="false"/>
        <attribute name="orderId" type="String" mode="OUT" optional="false"/>
    </service>

    <service name="getSubscriptions" engine="java"
             location="com.autopatt.admin.services.SubscriptionServices" invoke="getSubscriptions"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>returns subscription list of tenant</description>
        <attribute name="orgPartyId" type="String" mode="IN" optional="true"/>
        <attribute name="status" type="String" mode="IN" optional="true"/>
        <attribute name="productId" type="String" mode="IN" optional="true"/>
        <attribute name="subscriptions" type="List" mode="OUT" optional="false"/>
    </service>

    <service name="removeOrgEmployee" engine="java"
             location="com.autopatt.common.services.OrgEmployeeServices" invoke="removeOrgEmployee"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>remove employee user from the org</description>
        <attribute name="orgEmployeePartyId" type="String" mode="IN" optional="false"/>
    </service>
    <service name="reenableRemovedOrgEmployee" engine="java"
             location="com.autopatt.common.services.OrgEmployeeServices" invoke="reenableRemovedOrgEmployee"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>Re-enable an already removed employee user from the org</description>
        <attribute name="employeeUserLoginId" type="String" mode="IN" optional="false"/>
    </service>

    <service name="updateSubscriptionThruDate" engine="java"
             location="com.autopatt.admin.services.SubscriptionServices" invoke="updateSubscriptionThruDate"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>updates subscription thru date</description>
        <attribute name="subscriptionId" type="String" mode="IN" optional="false"/>
        <attribute name="validTo" type="Timestamp" mode="IN" optional="true"/>
    </service>

    <service name="generatePasswordResetToken" engine="java"
             location="com.autopatt.common.services.PasswordManagementServices" invoke="generatePasswordResetToken"
             auth="false" require-new-transaction="true" transaction-timeout="300">
        <description>Service returns JWT token to reset password</description>
        <attribute name="userLoginId" type="String" mode="IN" optional="false"/>
        <attribute name="userTenantId" type="String" mode="IN" optional="true"/>
        <attribute name="token" type="String" mode="OUT" optional="false"/>
    </service>

    <service name="resetPassword" engine="java"
             location="com.autopatt.common.services.PasswordManagementServices" invoke="resetPassword"
             auth="false" require-new-transaction="true" transaction-timeout="300">
        <description>Service resets the password without current password</description>
        <attribute name="userLoginId" type="String" mode="IN" optional="false"/>
        <attribute name="userTenantId" type="String" mode="IN" optional="true"/>
        <attribute name="newPassword" type="String" mode="IN" optional="false"/>
        <attribute name="newPasswordVerify" type="String" mode="IN" optional="false"/>
    </service>

    <service name="createNewTenantTransactionService" engine="java"
             location="com.autopatt.admin.utils.NewTenantTransactionLogUtils" invoke="createNewTenantTransactionService"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <attribute name="tenantId" type="String" mode="IN" optional="false"/>
        <attribute name="tenantOrgName" type="String" mode="IN" optional="true"/>
        <attribute name="transactionId" type="String" mode="OUT" optional="false"/>
    </service>
    <service name="createNewTenantTransactionLogService" engine="java"
             location="com.autopatt.admin.utils.NewTenantTransactionLogUtils" invoke="createNewTenantTransactionLogService"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <attribute name="transactionId" type="String" mode="IN" optional="false"/>
        <attribute name="status" type="String" mode="IN" optional="false"/>
        <attribute name="stepName" type="String" mode="IN" optional="true"/>
        <attribute name="details" type="String" mode="IN" optional="true" allow-html="any"/>
        <attribute name="transactionLogId" type="String" mode="OUT" optional="false"/>
    </service>

</services>
