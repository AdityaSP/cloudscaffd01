	</request-map>
	<request-map uri="initResetUserPwd">
		<security https="true" auth="true" />
		<event type="java" path="com.autopatt.portal.events.UserMgmtEvents" invoke="sendUserPasswordResetLink" />
		<response name="success" type="request" value="json"/>
		<response name="error" type="request" value="json"/>
	</request-map>

	<request-map uri="validatePasswordPolicy">
