<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Admin Portal Component Services</description>
    <vendor>OFBiz</vendor>
    <version>1.0</version>

    <service name="hasValidSubscriptionCheck" engine="java"
             location="com.autopatt.portal.services.AutopattSubscriptionServices" invoke="hasValidSubscriptionCheck"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>Assigns subscription to tenant</description>
        <implements service="permissionInterface"/>
    </service>

    <service name="hasValidSubscriptionToAddUser" engine="java"
             location="com.autopatt.portal.services.AutopattSubscriptionServices" invoke="hasValidSubscriptionToAddUser"
             auth="true" require-new-transaction="true" transaction-timeout="300">
        <description>Check if allowed to add new user for current tenant</description>
        <implements service="permissionInterface"/>
    </service>

    <service name="generatePasswordResetToken" engine="java"
             location="com.autopatt.portal.services.UserManagementServices" invoke="generatePasswordResetToken"
             auth="false" require-new-transaction="true" transaction-timeout="300">
        <description>Service returns JWT token to reset password</description>
        <attribute name="emailId" type="String" mode="IN" optional="false"/>
        <attribute name="token" type="String" mode="OUT" optional="false"/>
    </service>

</services>
